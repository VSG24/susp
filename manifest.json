{
	"name": "SUSP",
	"version": "1.0",
	"description": "SUSP - suspend connections and don't become suspicious",
	"permissions": [
		"tabs",
		"activeTab",
		"webRequest",
		"webRequestBlocking",
		"declarativeContent",
		"storage",
		"<all_urls>"
	],
	"options_page": "options.html",
	"background": {
		"scripts": [
			"background.js"
		],
		"persistent": true
	},
	"browser_action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "images/icon_16.png",
			"32": "images/icon_32.png",
			"48": "images/icon_48.png",
			"128": "images/icon_128.png"
		}
	},
	"content_scripts": [
		{
		  "matches": ["<all_urls>"],
		  "js": ["script.js"]
		}
	],
	"icons": {
		"16": "images/icon_16.png",
		"32": "images/icon_32.png",
		"48": "images/icon_48.png",
		"128": "images/icon_128.png"
	},
	"manifest_version": 2
}
